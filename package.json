    "@types/webpack": "^1.12.28-alpha",
    "@types/whatwg-fetch": "0.0.32",
    "awesome-typescript-loader": "~0.17.0",
    "codelyzer": "0.0.28",
    "compression-webpack-plugin": "0.3.1",
    "copy-webpack-plugin": "3.0.1",
    "css-loader": "0.25.0",
